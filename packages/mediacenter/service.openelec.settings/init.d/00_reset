# reset openelec
# 
# runlevels: openelec, textmode

get_target() {
  for arg in $(cat /proc/cmdline); do
    case $arg in
      disk=*)
        disk="${arg#*=}"
        case $disk in
          LABEL=*)
            label="${disk#*=}"
            target=`blkid -L $label`
            ;;
          UUID=*)
            uuid="${disk#*=}"
            target=`blkid -U $uuid`
            ;;
          /*)
            target=$disk
            ;;
        esac
        ;;
    esac
  done
}

# hard reset
if [ -f $CONFIG_CACHE/reset_oe ] ; then
  get_target
  if [ ! -z $target ] ; then
    echo "hard resetting..."
    umount /storage
    mke2fs -t ext4 -m 0 $target 2>&1 >/dev/null
    if [ ! -z $label ] ; then
      tune2fs -U random -L $label $target
    fi
    if [ ! -z $uuid ] ; then
      tune2fs -U $uuid $target
    fi
    reboot
  fi
fi

