. config/options $1
. config/functions
. config/optimize

# dont use some optimizations because of build problems
  LDFLAGS=`echo $LDFLAGS | sed -e "s|-Wl,--as-needed||"`

# dont build parallel
  MAKEFLAGS=-j1

  export PYTHON_VERSION="2.7"
  export PYTHON_CPPFLAGS="-I$SYSROOT_PREFIX/usr/include/python$PYTHON_VERSION"
  export PYTHON_LDFLAGS="-L$SYSROOT_PREFIX/usr/lib/python$PYTHON_VERSION -lpython$PYTHON_VERSION"
  export PYTHON_SITE_PKG="$SYSROOT_PREFIX/usr/lib/python$PYTHON_VERSION/site-packages"
  export ac_python_version="$PYTHON_VERSION"

# configure the build
export PKG_CONFIG_PATH=$SYSROOT_PREFIX/usr/lib/pkgconfig

cd $BUILD/plex-home-theater-public-pht-frodo/config
cmake -DCMAKE_LIBRARY_PATH="$SYSROOT_PREFIX/usr/lib" -DCMAKE_PREFIX_PATH="$SYSROOT_PREFIX" -DCMAKE_INCLUDE_PATH="$SYSROOT_PREFIX/usr/include" -DVERBOSE=1 -DCMAKE_BUILD_TYPE=Debug -DENABLE_DVD_DRIVE=on -DCMAKE_INSTALL_PREFIX=/opt/plexhometheater ../.

# make it so
make
make install
